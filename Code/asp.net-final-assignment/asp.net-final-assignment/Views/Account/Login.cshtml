@model LoginVM
@{
    ViewBag.Title = "Login";
}
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #fff;
    }

    .container {
        text-align: center;
        max-width: 400px;
        width: 100%;
        padding: 20px;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 40px;
    }

    h2 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    p {
        font-size: 14px;
        color: #555;
        margin-bottom: 20px;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
        box-sizing: border-box;
    }

    .btn-primary {
        width: 100%;
        display: block;
        padding: 12px;
        background-color: #000;
        color: #fff;
        font-size: 14px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
    }

    .terms {
        font-size: 12px;
        color: #777;
        margin-top: 16px;
    }

    .terms a {
        color: #000;
        text-decoration: none;
        font-weight: bold;
    }

    .signup-link {
        margin-top: 20px;
        font-size: 14px;
    }

    .signup-link a {
        color: #007bff;
        text-decoration: none;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding-left: 0;
        margin: 0 0 12px 0;
    }
</style>

<div class="container">
    <h1>Vehicle Rental Management System</h1>
    <h2>Login to your account</h2>
    <p>Fill out the following to login:</p>

    <!-- Login Form -->
    <form asp-controller="Account" asp-action="Login" method="post">
        <input asp-for="Username" type="email" placeholder="email@domain.com" required />
        <span asp-validation-for="Username"></span>

        <input asp-for="Password" type="password" placeholder="Password" required />
        <span asp-validation-for="Password"></span>

        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn-primary">Sign in</button>
    </form>

    <div class="terms">
        By clicking sign in, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
    </div>

    <div class="signup-link">
        Don’t have an account? <a href="/register">Sign Up</a>
    </div>
</div>
